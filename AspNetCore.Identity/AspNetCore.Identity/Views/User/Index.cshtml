@*@using AspNetCore.Identity.Entities --> Buraya da yazabiliriz ama daha genel olabilmesi için _ViewImports.cshtml ' e yazıyoruz. *@ 
@model List<AppUser>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Layout";
}

@*<a asp-action="Create" asp-controller="Home" class="my-2 d-inline-block">Create New User</a>*@

<table class = "table table-hovered table-bordered table-sm">
    <thead>
        <tr>
            <th>Username</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
            <td>@user.UserName</td>
            <td>@user.Gender</td>
            <td>@user.Email</td>
             <td><getUserInfo user-id="@user.Id"></getUserInfo></td>
             <td>
                 <a asp-action="AssignRole" asp-controller="User" asp-route-id="@user.Id">Assign Role</a>
             </td>

            </tr>
        }
    </tbody>
</table>

