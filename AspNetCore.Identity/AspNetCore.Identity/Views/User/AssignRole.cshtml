@model RoleAssignSendModel
@{
    Layout = "_Layout";
}

<form asp-action="AssignRole" method="POST" class="p-4 w-75 mx-auto shadow">
    <div class="mb-3">
        <input type="hidden" asp-for="@Model.UserId"/>
            @for(int i=0; i<Model.Roles.Count; i++)
            {
                <input type="hidden" asp-for="@Model.Roles[i].Name"/>
                <input type="hidden" asp-for="@Model.Roles[i].RoleId"/>
              <input class="form-check-input me-1"  asp-for="@Model.Roles[i].Exist">
             <label class="form-check-label" for="secondCheckbox">@Model.Roles[i].Name</label>

            }
          

    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>

    <div class="text-danger" asp-validation-summary="ModelOnly"></div> @*Yalnızca modeldeki hatalar burada gözükür.*@
</form>
