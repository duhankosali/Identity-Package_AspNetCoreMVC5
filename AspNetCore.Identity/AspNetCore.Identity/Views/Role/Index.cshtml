@*@using AspNetCore.Identity.Entities --> Buraya da yazabiliriz ama daha genel olabilmesi için _ViewImports.cshtml ' e yazıyoruz. *@ 
@model List<AppRole>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Layout";
}

<a asp-action="Create" asp-controller="Role" class="my-2 d-inline-block">Create New Role</a>

<table class = "table table-hovered table-bordered table-sm">
    <thead>
        <tr>
            <th>Name</th>
            <th>Created Time</th>
       
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
            <td>@user.Name</td>
            <td>@user.CreatedTime</td>
        
            </tr>
        }
    </tbody>
</table>

